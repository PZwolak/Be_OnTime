.footer {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--black);
    border-bottom: 3px solid var(--yellow);
    min-height: 70px;
}

.footer__inner {
    color: var(--white);
    font-size: 18px;
}

.footer__inner span {
    color: var(--white);
}

.footer__inner span.logo {
    font-family: "Pacifico-Regular", sans-serif;
}