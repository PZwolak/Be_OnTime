@media(min-width:768px) {
    .new-product__inner {
        display: flex;
    }

    .new-product__left {
        width: 60%;
        text-align: center;
        padding: 0 30px;
    }

    .new-product__right {
        display: flex;
        flex-direction: column;
        width: 40%;
        padding: 0 30px;
    }
}