@font-face {
    font-family: "Nunito-ExtraLight";
    src: url('{{ "Font-Nunito-ExtraLight.ttf" | asset_url }}') format("truetype");
    font-weight: 200;
}

@font-face {
    font-family: "Nunito-Regular";
    src: url('{{ "Font-Nunito-Regular.ttf" | asset_url }}') format("truetype");
    font-weight: 400;
}

@font-face {
    font-family: "Nunito-SemiBold";
    src: url('{{ "Font-Nunito-SemiBold.ttf" | asset_url }}') format("truetype");
